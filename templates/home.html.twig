{% extends 'base.html.twig' %}
{% block header %}
  {{ include('navbar.html.twig') }}
{% endblock %}
{% block body %}
  <div class="container">
    <div class="main-body">
      <div class="row">
        <div class="col-md-4 col-12"></div>
        <div class="col-md-4 col-12 justify-content-center d-block m-auto">
          <div class="card">
            <div class="card-title">
              <div style="display:block; text-align:center;">
                <img src=" {{ asset('build/images/clash_royale_logo.png') }}" alt="Clash Royale logo" style="width:80%; padding-top:10vh; padding-bottom:10vh;" class="center" />
              </div>
            </div>
            <form class="form-inline justify-content-center py-5" action="player" method="get">
              <div class="form-group mx-sm-3 mb-2">
                <label class="sr-only" for="playerIdTextInput">Enter your player Id</label>
                <div class="input-group mb-2">
                  <div class="input-group-prepend">
                    <div class="input-group-text">#</div>
                  </div>
                  <input type="text" class="form-control" id="inlineFormInputGroup" placeholder="Player Id" name="playerId" />
                </div>
                <button type="submit" class="btn btn-primary ml-1 mb-2">Go</button>
              </div>
            </form>
          </div>
        </div>
        <div class="col-md-4 col-2">
          <img src=" {{ asset('build/images/dart-goblin.png') }}" alt="Dart Goblin" style="position:fixed; bottom:0; right:5vw; width:20vw" />
        </div>
      </div>
    </div>
  </div>
{% endblock %}
